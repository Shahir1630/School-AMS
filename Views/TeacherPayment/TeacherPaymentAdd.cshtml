@model Group03_PS.Models.TeacherPayment


@{
    ViewData["title"] = "New Payment";
}




<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="TeacherPaymentAdd" asp-controller="TeacherPayment" method="post" role="form">
            <div class="modal-header">
                <h4 class="modal-title">Add New Payment</h4>
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
                <a asp-action="TeacherList" asp-controller="Teacher" class="close" data-dismiss="modal" aria-hidden="true">x</a>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" class="form-control" placeholder="Enter Date" name="Date" required="required">

                </div>
                <div class="form-group">
                    <label asp-for="TeacherId">Teacher Id</label>
                    <input asp-for="TeacherId" class="form-control" name="TeacherId" required="required">

                </div>

                <div class="form-group">
                    <select class="form-control" asp-for="MonthName">
                        <option class="hidden" selected="" disabled="">Please select one</option>
                        <option value="January">January</option>
                        <option value="February">February</option>
                        <option value="March">	March</option>
                        <option value="April">April</option>
                        <option value="May">May</option>
                        <option value="June">June</option>
                        <option value="July">July</option>
                        <option value="August">August</option>
                        <option value="September">September</option>
                        <option value="October">October</option>
                        <option value="November">November</option>
                        <option value="December">December</option>
                    </select>
                </div>
                <div class="form-group">

                    <label asp-for="Salary">Salary</label>
                    <input asp-for="Salary" class="form-control" placeholder="Enter Salary" name="Salary" required="required">
                </div>

                <div class="form-group">

                    <label asp-for="Fine">Fine</label>
                    <input asp-for="Fine" class="form-control" placeholder="Enter Employee Salary" name="Fine" required="required">
                </div>


            </div>

            <div class="modal-footer">
                <input type="submit" class="btn btn-success" value="Add">
            </div>
        </form>
    </div>
</div>